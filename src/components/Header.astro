---
import HeaderLink from "./HeaderLink.astro";
import Button from "./Button";

import MenuIcon from './icons/Menu.astro';
import CloseIcon from './icons/Close.astro';
---

<header id="header-nav" class="fixed top-0 w-full px-6 py-4 z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between gap-16">
    <HeaderLink checkActive={false} href="/" class:list='relative z-10' >
      <img class="absolute w-10 m-auto blur-sm opacity-0 transition-opacity duration-300 hover:opacity-100" src="/logo.png" width="40" alt="Logo Cosmere">
      <img class="w-10" src="/logo.png" width="40" alt="Logo Cosmere">
    </HeaderLink>

    <nav id="header-menu" class="fixed w-full h-dvh inset-0 bg-[#151a36]/90 md:text-xl lg:text-xl flex flex-col items-center justify-center gap-8 -translate-y-full transition-transform duration-300 target:translate-y-0 md:static md:h-[initial] md:bg-[initial] md:flex-row md:translate-y-[initial]">
        <HeaderLink class="text__glowing" href="/vota/">
          vota
        </HeaderLink>
        <HeaderLink class="text__glowing" href="/info/">
          info
        </HeaderLink>
        <HeaderLink class="text__glowing" href="/archivo/">
          archivo
        </HeaderLink>
      <Button
      className="md:py-2 md:ml-auto md:text-base lg:text-base"
      url="#"
    >
        TCA - the documental
    </Button>
    <a href="#header-nav" class="md:hidden absolute top-6 right-6">
      <CloseIcon />
    </a>
    </nav>
    <a href="#header-menu" class="md:hidden"><MenuIcon /></a>
  </div>
</header>