---
import Layout from "../../layouts/Layout.astro"
import HeroContainer from "../HeroContainer.astro"
import Button from "../Button"

import { getI18N } from "../../i18n"
import Numbers from "../Numbers.astro"
import Gallery from "../Gallery.astro"
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---

<Layout title='Archivo' description='Archivo Description'>
  <HeroContainer img="/cosmere-roshar.webp">
    <h1 class="uppercase text-5xl mb-20 font-tomaso tracking-widest">{i18n.ARCHIVE_TITLE}</h1>
    <Button className="nimate-fade-up" url="#">
      {i18n.ARCHIVE_BUTTON}
    </Button>
  </HeroContainer>
  <main>
    <Gallery/>
    <Numbers/>
  </main>
</Layout>